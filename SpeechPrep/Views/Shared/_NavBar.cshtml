@*Modal for login*@
<div class="modal fade" id="userLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">User Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "UserProfileController", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("UserName", "User Name:")
                        @Html.TextBox("UserName", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Password", "Password:")
                        @Html.TextBox("Password", null, new { @class = "form-control" })
                    </div>
                    Html.EndForm();
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</div>