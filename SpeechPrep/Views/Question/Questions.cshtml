@model IEnumerable<SpeechPrep.Models.Question>
@{
    Random rnd = new Random();
    int num = rnd.Next(50);
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h2 class="text-center">Behavioral Interview Questions</h2>
        <span>@Html.ActionLink(linkText: "Random Question", actionName: "Random/", controllerName: "Question", routeValues: new { id = num }, htmlAttributes: null)</span>

        @foreach (var question in Model)
        {

            <p>@question.InterviewQuestion</p> 
        }

    </div>

